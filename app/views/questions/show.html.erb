<h1><%= @question.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @question.body %></p>
    <p>Resolved: <%= @question.resolved ? "Yes" : "No" %></p>
    <%= link_to "Back to Questions", questions_path(@question), class: 'btn btn-warning' %>
    <%= link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %>
    <%= link_to "Delete Question", @question, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
  </div>
  <div class="col-md-8">

</div>
